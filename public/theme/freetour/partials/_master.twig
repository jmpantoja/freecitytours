{% spaceless %}
{% set lang = app.paths.current|split('/')[3] %}

{% if lang not in ['en', 'es'] %}
    {% set lang = 'es' %}
{% endif %}
{{ setlanguage(lang) }}

<!DOCTYPE HTML>
<html>
<head>
    <title>{{ app.config.get('general/sitename') -}}</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="description" content="Jerez es una ciudad llena de historia, cultura y turismo, descubrela gratis en nuestras visitas guiadas.">
    <meta name="description" content="Jerez is a city full of history, culture and tourism, discover it free on our guided tours.">

    <meta property="og:title" content="{{ app.config.get('general/sitename') }}" />
    <meta property="og:type" content="activity" />
    <meta property="og:description" content="Jerez es una ciudad llena de historia, cultura y turismo, descubrela gratis en nuestras visitas guiadas." />

    <meta property="og:image" content="{{ asset('images/header.jpg', 'theme') }}" />

    <meta property="og:site_name" content="{{ app.config.get('general/sitename') }}" />



    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico', 'theme') }}">
    {% block css %}
        <!--[if lte IE 8]>
        <script src="{{ asset('js/ie/html5shiv.js', 'theme') }}"></script><![endif]-->
        <link rel="stylesheet" href="{{ bundler('css/vendor.css') }}"/>
        <!--[if lte IE 8]>
        <link rel="stylesheet" href="{{ asset('css/ie8.css', 'theme') }}"/><![endif]-->
    {% endblock css %}
</head>
<body class="homepage">
<div id="page-wrapper">

    {% block main %}{% endblock main %}

    {{ include('partials/_footer.twig') }}

</div>

{% block js %}
    <script type="text/javascript" src="{{ bundler('js/vendor.js') }}"></script>
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-47003324-2', 'auto');
        ga('send', 'pageview');

    </script>

{% endblock js %}

</body>
</html>
{% endspaceless %}